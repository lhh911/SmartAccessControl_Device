<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xsjqzt.module_main.widget.NumInputView
        android:id="@+id/numinputview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/help_tip_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:background="@drawable/white_corners20_bg"
            android:textSize="14dp"
            android:textColor="#3e6cbb"
            android:text="返回>"/>
        
        
        <TextView
            style="@style/textview18"
            android:text="帮助"
            android:layout_marginTop="15dp"
            android:textColor="#3e6cbb"
            android:drawableLeft="@mipmap/icon_gth"
            android:drawablePadding="10dp"
            android:layout_marginLeft="35dp"/>


        <TextView
            android:id="@+id/help_tip_tv"
            style="@style/textview16"
            android:text="@string/help_tip"
            android:textColor="@color/common_white"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="10dp"/>

    </LinearLayout>



</LinearLayout>