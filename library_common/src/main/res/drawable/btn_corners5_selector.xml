        <shape android:shape="rectangle">
            <gradient android:type="linear"  android:endColor="#ff00d0c7" android:startColor="#ff10a0dc"  />
            <corners android:radius="5dp"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <gradient android:type="linear"  android:endColor="#ff00d4c7" android:startColor="#ff10acdc"  />
            <corners android:radius="5dp"  />
        </shape>
    </item>
</selector>