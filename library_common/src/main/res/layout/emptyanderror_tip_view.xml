<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tip_img_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="105dp"
        android:src="@color/common_app_bg" />

    <TextView
        android:id="@+id/tip_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/common_color_333333"
        android:textSize="@dimen/common_16dp"
        android:text=""
        android:visibility="visible" />


    <TextView
        android:id="@+id/tip_btn"
        android:background="@drawable/btn_corners5_selector"
        android:textSize="@dimen/common_16dp"
        android:textColor="@color/common_white"
        android:text="@string/pickerview_submit"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="120dp"
        android:gravity="center"
        android:layout_marginTop="25dp"/>
</LinearLayout>